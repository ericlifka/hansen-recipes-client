<div class="primary-search">
  <div class="input-group">
    <label for="recipe-name-search">Search by name</label>
    {{input id="recipe-name-search" value=nameFilterInput placeholder="Search by recipe name"}}
  </div>
</div>

<div class="results-pane">
  <div class="active-filters">
    <div class="tags">
      {{#each filters.tags as |tag|}}
        {{selectable-tag
          text=tag.name
          onSelect=(action 'removeFilter' 'tags' tag)}}
      {{/each}}
    </div>
    <div class="ingredients">
      {{#each filters.ingredients as |ingredient|}}
        {{selectable-tag
          text=ingredient.name
          onSelect=(action 'removeFilter' 'ingredients' ingredient)}}
      {{/each}}
    </div>
  </div>
  <div class="no-results-message">
    Add a filter or start typing to see recipes.
  </div>
</div>

<div class="filters">
  <div class="filter">
    <button class="btn secondary" role="button" {{action "openTagsFilterPanel"}}>
      Tags
    </button>
  </div>
  <div class="filter">
    <button class="btn secondary" role="button" {{action "openIngredientsFilterPanel"}}>
      Ingredients
    </button>
  </div>
</div>

<div class="filter-panel tags {{if tagsPanel 'expanded'}}">
  <div class="content">
    {{#each tagFilters as |tag|}}
      {{selectable-tag
        text=tag.name
        onSelect=(action 'addFilter' 'tags' tag)}}
    {{/each}}
  </div>
  <div class="footer">
    <button class="btn secondary" role="button" {{action "closeFilterPanels"}}>
      Close
    </button>
  </div>
</div>

<div class="filter-panel ingredients {{if ingredientsPanel 'expanded'}}">
  <div class="content">
    {{#each ingredientFilters as |ingredient|}}
      {{selectable-tag
        text=ingredient.name
        onSelect=(action 'addFilter' 'ingredients' ingredient)}}
    {{/each}}
  </div>
  <div class="footer">
    <button class="btn secondary" role="button" {{action "closeFilterPanels"}}>
      Close
    </button>
  </div>
</div>
